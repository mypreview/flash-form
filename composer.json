{
	"archive": {
		"exclude": [
			"!/build",
			"!/languages",
			"/src",
			"CONTRIBUTING.md",
			"CODE_OF_CONDUCT.md",
			"babel.config.js",
			"composer.json",
			"composer.lock",
			"package.json",
			"package-lock.json",
			"phpcs.xml.dist",
			"phpstan.neon.dist",
			"README.md",
			"node_modules",
			"vendor",
			".husky",
			".editorconfig",
			".gitattributes",
			".gitignore",
			".github",
			".wordpress-org",
			".browserslistrc",
			".eslintrc.js",
			".prettierrc.js",
			".wp-env.json",
			"webpack.config.js",
			".*"
		]
	},
	"authors": [
		{
			"homepage": "https://www.mahdiyazdani.com",
			"name": "Mahdi Yazdani"
		}
	],
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"description": "Build a form to be limitless, in a flash âš¡",
	"extra": {
		"scripts-description": {
			"lint:wpcbf": "Fix coding standards warnings/errors automatically with PHP Code Beautifier",
			"lint:wpcs": "Analyze code against the WordPress coding standards with PHP_CodeSniffer",
			"make-pot": "Create a POT file for the WordPress plugin in the current directory"
		}
	},
	"homepage": "https://wordpress.org/support/plugin/flash-form",
	"keywords": [
		"WordPress",
		"Plugin"
	],
	"license": "GPL-3.0",
	"name": "mypreview/flash-form",
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
		"wp-coding-standards/wpcs": "^2.3.0",
		"phpunit/phpunit": "^9",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"php-parallel-lint/php-parallel-lint": "^1.2.0",
		"wp-cli/i18n-command": "^2.2.6"
	},
	"scripts": {
		"lint:wpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --runtime-set testVersion 7.4-",
		"lint:wpcbf": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf --runtime-set testVersion 7.4-",
		"lint:php": "@php ./vendor/bin/parallel-lint --exclude .git --exclude vendor --exclude node_modules .",
		"make-pot": "wp i18n make-pot . languages/flash-form.pot --exclude=build"
	},
	"type": "wordpress-plugin"
}
